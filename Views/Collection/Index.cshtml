@model IEnumerable<Tarazism.Models.Collection>
@{
    ViewData["Title"] = "Collections";
}
<section class="py-12 max-w-screen-xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-6">Collections</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        @foreach (var c in Model)
        {
            <div class="p-5 bg-white dark:bg-gray-800 rounded-lg shadow">
                <h3 class="font-semibold text-xl">@c.Title</h3>
                <p class="text-gray-600 dark:text-gray-300 mt-2">@c.Description</p>
                <a href="/Collection/Details?id=@c.Id" class="mt-4 inline-block text-blue-600">View →</a>
            </div>
        }
    </div>
</section>
