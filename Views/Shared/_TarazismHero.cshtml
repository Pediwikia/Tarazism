<section class="relative overflow-hidden py-28 select-none">

    <!-- Ambient background glow -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-purple-600/20 dark:from-blue-900/30 dark:to-purple-900/30 blur-[90px] opacity-70"></div>

    <!-- Parallax Layer (moves with mouse) -->
    <div id="parallax-layer" class="absolute inset-0 pointer-events-none transition-transform duration-300"></div>

    <!-- Floating particles -->
    <div id="particles-container" class="absolute inset-0 pointer-events-none"></div>

    <div class="relative z-10 text-center max-w-screen-xl mx-auto px-4">

        <!-- Hero Title -->
        <h1 class="text-5xl md:text-6xl font-extrabold mb-8 opacity-0 animate-fade-in">
            Discover
            <span class="text-blue-600 dark:text-yellow-400">Balance</span><br />
            In All Things
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto mb-12 opacity-0 animate-fade-in-delay">
            Books, anime, games, photography, philosophy — curated through the lens of
            <span class="font-semibold">Tarazism</span>, the art of harmony.
        </p>

        <!-- Hero Buttons -->
        <div class="flex justify-center space-x-4 opacity-0 animate-fade-in-delay-2">
            <a href="#gallery" class="px-8 py-3 bg-blue-600 text-white rounded-xl shadow hover:bg-blue-700 transition">
                Explore Gallery
            </a>
            <a href="#reviews" class="px-8 py-3 border border-gray-400 dark:border-gray-600 rounded-xl hover:bg-gray-100 dark:hover:bg-gray-800 transition">
                Reviews
            </a>
        </div>

        <!-- Floating cards -->
        <div class="relative mt-20 grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">

            <div class="bg-white/90 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl shadow-lg p-4 animate-float">
                <img src="/img/gallery/Anime.jpg" class="rounded-lg mb-3" />
                <p class="text-sm text-gray-600 dark:text-gray-300">Anime</p>
            </div>

            <div class="bg-white/90 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl shadow-lg p-4 animate-float-delay">
                <img src="/img/gallery/Games.jpg" class="rounded-lg mb-3" />
                <p class="text-sm text-gray-600 dark:text-gray-300">Games</p>
            </div>

            <div class="bg-white/90 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl shadow-lg p-4 animate-float">
                <img src="/img/gallery/Photography.jpg" class="rounded-lg mb-3" />
                <p class="text-sm text-gray-600 dark:text-gray-300">Photography</p>
            </div>

            <div class="bg-white/90 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl shadow-lg p-4 animate-float-delay">
                <img src="/img/gallery/Books.jpg" class="rounded-lg mb-3" />
                <p class="text-sm text-gray-600 dark:text-gray-300">Books</p>
            </div>

        </div>
    </div>
</section>
