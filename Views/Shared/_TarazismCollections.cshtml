@model List<Tarazism.Models.TarazCollection>

<section id="collections" class="mt-32 mb-32 reveal">
    <h2 class="text-3xl font-bold mb-12 text-center">Taraz Collections</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">

        @if (Model != null && Model.Any())
        {
            foreach (var col in Model)
            {
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border
                            border-gray-200 dark:border-gray-700 overflow-hidden hover:shadow-xl transition">

                    <!-- Title area -->
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold">@col.Title</h3>
                        <p class="text-gray-600 dark:text-gray-300 mt-1">@col.Subtitle</p>
                    </div>

                    <!-- Mini gallery grid (up to 4 items) -->
                    <div class="grid grid-cols-2 gap-2 px-4 pb-4">
                        @foreach (var item in col.Items.Take(4))
                        {
                            <div class="relative group">
                                <img src="@item.ImageUrl"
                                     class="h-32 w-full object-cover rounded-lg shadow-sm group-hover:opacity-80 transition" />

                                <span class="absolute bottom-1 left-1 bg-black/60 text-white text-xs px-2 py-0.5 rounded">
                                    @item.Category
                                </span>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</section>
