@model List<Tarazism.Models.TarazRoadmap>

<section class="mb-28 reveal">
    <h2 class="text-3xl font-bold mb-8">Taraz Roadmap</h2>

    @foreach (var year in Model)
    {
        <h3 class="text-2xl font-semibold mb-4">@year.Year</h3>

        <div class="grid md:grid-cols-3 gap-6 mb-12">
            @foreach (var item in year.Milestones)
            {
                <div class="p-5 rounded-xl shadow bg-gray-100 dark:bg-gray-800">
                    <div class="text-3xl mb-3">@item.Icon</div>
                    <h4 class="text-xl font-bold mb-2">@item.Title</h4>
                    <span class="text-sm text-gray-500">@item.Status</span>
                </div>
            }
        </div>
    }
</section>
