@using Tarazism.Models
@model IEnumerable<GalleryItem>

<section class="py-8 px-4">
    <h2 class="text-3xl font-bold mb-6 text-center">Gallery</h2>

    <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 [column-fill:_balance]">

        @foreach (var item in Model ?? Enumerable.Empty<GalleryItem>())
        {
            <div class="mb-4 break-inside-avoid">
                <div class="relative overflow-hidden rounded-xl shadow-md hover:shadow-xl transition">
                    <img src="@item.ImageUrl"
                         alt="@item.Title"
                         class="w-full rounded-xl object-cover" />

                    <!-- Overlay -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 hover:opacity-100 transition flex items-end p-4 rounded-xl">
                        <div>
                            <h3 class="text-white font-semibold text-lg">@item.Title</h3>
                            <p class="text-gray-200 text-sm">@item.Category</p>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
