@model List<Tarazism.Models.TarazNote>

<section id="taraz-notes" class="mt-20">
    <h2 class="text-3xl font-bold mb-8 text-center">
        Taraz Notes
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        @foreach (var note in Model)
        {
            <div class="p-6 bg-white dark:bg-gray-800 shadow rounded-xl border border-gray-200 dark:border-gray-700 hover:shadow-lg transition">
                <p class="text-lg italic text-gray-900 dark:text-gray-100">
                    "@note.Quote"
                </p>

                <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
                    — @note.Author
                </p>

                <div class="w-16 h-1 mt-4 rounded" style="background:@note.Accent;"></div>
            </div>
        }
    </div>
</section>
