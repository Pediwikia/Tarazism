@model Tarazism.Models.UserProfile
<section class="py-12 max-w-screen-xl mx-auto px-4">
    <div class="flex items-center gap-6">
        <img src="@Model.AvatarUrl" class="w-28 h-28 rounded-full object-cover" />
        <div>
            <h1 class="text-2xl font-bold">@Model.DisplayName</h1>
            <div class="text-sm text-gray-500">@Model.Username</div>
            <p class="mt-2 text-gray-600 dark:text-gray-300">@Model.Bio</p>
            <div class="mt-3 flex gap-2">
                @foreach (var b in Model.Badges)
                {
                    <span class="px-2 py-1 bg-blue-600 text-white rounded">@b</span>
                }
            </div>
        </div>
    </div>

    <div class="mt-8">
        <h2 class="text-xl font-semibold mb-3">Favorites</h2>
        <div id="profileFavorites" class="grid grid-cols-1 md:grid-cols-3 gap-4"></div>
    </div>
</section>

<script>
    (function () {
        const container = document.getElementById("profileFavorites");
        const favs = JSON.parse(localStorage.getItem("favorites") || "[]");
        if (!favs.length) {
            container.innerHTML = "<div class='text-gray-500'>No favorites yet.</div>";
            return;
        }
        favs.forEach(title => {
            const el = document.createElement("div");
            el.className = "p-3 bg-white dark:bg-gray-800 rounded shadow";
            el.innerHTML = `<div class="font-medium">${title}</div><a href="/Item/Details?title=${encodeURIComponent(title)}" class="text-blue-600">Open</a>`;
            container.appendChild(el);
        });
    })();
</script>
