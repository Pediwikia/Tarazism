@model Tarazism.Models.SpotlightItem

<section id="taraz-spotlight" class="relative mb-32 reveal">

    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
        <img src="@Model.ImageUrl"
             class="w-full h-full object-cover opacity-40 blur-sm scale-110" />
    </div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/80 z-0"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-6 py-32 text-center text-white">

        <h2 class="text-4xl md:text-6xl font-bold drop-shadow-lg mb-4">
            @Model.Title
        </h2>

        <p class="text-xl md:text-2xl text-gray-200 mb-8 drop-shadow">
            @Model.Subtitle
        </p>

        <p class="max-w-2xl mx-auto text-gray-300 text-lg mb-10 leading-relaxed">
            @Model.Description
        </p>

        <a href="@Model.ButtonUrl"
           class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-full text-lg transition">
            @Model.ButtonText
        </a>
    </div>
</section>
