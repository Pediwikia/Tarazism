@model Tarazism.Models.TarazScore

<section id="taraz-score" class="mt-28 reveal">

    <h2 class="text-3xl font-bold mb-10 text-center">Taraz Score</h2>

    <div class="max-w-3xl mx-auto bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">

        <!-- Top: Image + Title + Score radial -->
        <div class="flex flex-col md:flex-row items-center md:items-start md:space-x-10">

            <!-- Image -->
            <img src="@Model.ImageUrl"
                 class="w-48 h-72 object-cover rounded-xl shadow mb-6 md:mb-0" />

            <div class="flex-1">

                <!-- Title -->
                <h3 class="text-2xl font-bold mb-4">@Model.Title</h3>

                <!-- Radial Score -->
                <div class="flex items-center space-x-4 mb-6">
                    <div class="relative flex items-center justify-center">

                        <!-- SVG radial -->
                        <svg class="w-24 h-24">
                            <circle cx="50%" cy="50%" r="42"
                                    stroke="gray" stroke-width="6"
                                    fill="none" class="opacity-30" />

                            <circle cx="50%" cy="50%" r="42"
                                    stroke="#0B74FF"
                                    stroke-width="6"
                                    fill="none"
                                    stroke-linecap="round"
                                    stroke-dasharray="264"
                                    stroke-dashoffset="@((1 - (Model.Score / 10)) * 264)"
                                    class="transition-all duration-700" />
                        </svg>

                        <span class="absolute text-2xl font-bold">
                            @Model.Score.ToString("0.0")
                        </span>
                    </div>

                    <span class="text-gray-500 dark:text-gray-300 text-sm">
                        Average Taraz Score
                    </span>
                </div>

                <!-- Criteria Bars -->
                <div class="space-y-4">

                    @* Balance *@
                    <div>
                        <div class="flex justify-between">
                            <span>⚖ Balance</span>
                            <span>@Model.Balance/10</span>
                        </div>
                        <div class="w-full bg-gray-300 dark:bg-gray-700 rounded-full h-2">
                            <div class="bg-blue-600 dark:bg-yellow-400 h-2 rounded-full"
                                 style="width:@($"{Model.Balance * 10}%")"></div>
                        </div>
                    </div>

                    @* Craft *@
                    <div>
                        <div class="flex justify-between">
                            <span>🛠 Craftsmanship</span>
                            <span>@Model.Craft/10</span>
                        </div>
                        <div class="w-full bg-gray-300 dark:bg-gray-700 rounded-full h-2">
                            <div class="bg-blue-600 dark:bg-yellow-400 h-2 rounded-full"
                                 style="width:@($"{Model.Craft * 10}%")"></div>
                        </div>
                    </div>

                    @* Emotion *@
                    <div>
                        <div class="flex justify-between">
                            <span>💛 Emotional Resonance</span>
                            <span>@Model.Emotion/10</span>
                        </div>
                        <div class="w-full bg-gray-300 dark:bg-gray-700 rounded-full h-2">
                            <div class="bg-blue-600 dark:bg-yellow-400 h-2 rounded-full"
                                 style="width:@($"{Model.Emotion * 10}%")"></div>
                        </div>
                    </div>

                    @* Aesthetic *@
                    <div>
                        <div class="flex justify-between">
                            <span>🎨 Aesthetic Cohesion</span>
                            <span>@Model.Aesthetic/10</span>
                        </div>
                        <div class="w-full bg-gray-300 dark:bg-gray-700 rounded-full h-2">
                            <div class="bg-blue-600 dark:bg-yellow-400 h-2 rounded-full"
                                 style="width:@($"{Model.Aesthetic * 10}%")"></div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</section>
