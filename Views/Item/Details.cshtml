@model Tarazism.Models.CategoryItem
@{
    ViewData["Title"] = Model.Title;
    var reviews = ViewData["Reviews"] as IEnumerable<Tarazism.Models.SubmittedReview> ?? Enumerable.Empty<Tarazism.Models.SubmittedReview>();
}

<section class="py-12 max-w-screen-xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="md:col-span-2">
            <img src="@Model.ImageUrl" class="w-full h-96 object-cover rounded-lg" />
            <h1 class="text-3xl font-bold mt-4">@Model.Title</h1>
            <p class="text-gray-600 dark:text-gray-300 mt-2">@Model.Description</p>

            <div class="mt-4 flex items-center gap-4">
                <div class="text-yellow-400">⭐ @Model.Rating</div>
                <button id="favBtn" data-title="@Model.Title" class="px-3 py-2 bg-gray-700 text-white rounded">Add to Favorites</button>
            </div>

            <h2 class="text-2xl font-semibold mt-8">Reviews</h2>
            <div class="space-y-4 mt-4">
                @foreach (var r in reviews)
                {
                    <div class="p-3 bg-white dark:bg-gray-800 rounded shadow">
                        <div class="flex justify-between">
                            <div>@r.ReviewerName</div>
                            <div class="text-sm text-gray-500">@r.ReviewDate.ToLocalTime().ToShortDateString()</div>
                        </div>
                        <div class="text-yellow-400">⭐ @r.Rating</div>
                        <p class="mt-2">@r.ReviewText</p>
                    </div>
                }
            </div>
        </div>

        <aside class="p-4 bg-white dark:bg-gray-800 rounded-lg shadow">
            <h3 class="font-semibold">Tags</h3>
            <div class="mt-3 flex gap-2 flex-wrap">
                @foreach (var t in Model.Tags)
                {
                    <span class="px-2 py-1 bg-blue-600 text-white rounded">@t</span>
                }
            </div>
            <div class="mt-6">
                <a href="/Review?item=@Model.Title" class="text-blue-600">Write a review</a>
            </div>
        </aside>
    </div>
</section>

<script>
    document.getElementById("favBtn").addEventListener("click", () => {
        const title = document.getElementById("favBtn").dataset.title;
        let favs = JSON.parse(localStorage.getItem("favorites") || "[]");
        if (!favs.includes(title)) {
            favs.push(title);
            localStorage.setItem("favorites", JSON.stringify(favs));
            alert("Added to favorites!");
        } else {
            alert("Already in favorites.");
        }
    });
</script>
