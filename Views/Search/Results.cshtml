@model List<string>
@{
    ViewData["Title"] = "Search";
}
<section class="py-12 max-w-screen-xl mx-auto px-4">
    <h1 class="text-2xl font-bold mb-4">Search results for "@ViewData["Query"]"</h1>

    @if (!Model.Any())
    {
        <p class="text-gray-500">No results found.</p>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            @foreach (var r in Model)
            {
                <div class="p-4 bg-white dark:bg-gray-800 rounded shadow">
                    <h3 class="font-semibold">@r</h3>
                    <a href="/Item/Details?title=@Uri.EscapeDataString(r)" class="text-blue-600">Open</a>
                </div>
            }
        </div>
    }
</section>
