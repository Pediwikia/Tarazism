@model Tarazism.Models.TarazTimeline

<section id="timeline" class="mb-28 reveal">
    <h2 class="text-3xl font-bold mb-10">@Model.Title</h2>

    <div class="relative border-l border-gray-300 dark:border-gray-700 ml-6">

        @foreach (var item in Model.Items)
        {
            <div class="mb-12 ml-6 relative">

                <span class="absolute -left-[13px] top-1 w-6 h-6 bg-blue-600
                                 rounded-full border-4 border-white dark:border-gray-900"></span>

                <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">

                    <p class="text-sm text-gray-500">@item.Year</p>
                    <h3 class="text-xl font-semibold mb-2">@item.Heading</h3>
                    <p class="text-gray-700 dark:text-gray-300 mb-4">@item.Description</p>

                    @if (!string.IsNullOrEmpty(item.Icon))
                    {
                        <div class="text-3xl mb-2">@item.Icon</div>
                    }

                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="rounded-lg shadow-md max-w-sm" />
                    }
                </div>
            </div>
        }
    </div>
</section>
