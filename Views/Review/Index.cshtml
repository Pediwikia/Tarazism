@model IEnumerable<Tarazism.Models.SubmittedReview>
@{
    ViewData["Title"] = "Reviews";
}

<section class="py-12 max-w-screen-xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-4">Reviews</h1>

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 text-red-800 p-3 rounded mb-4">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 text-green-800 p-3 rounded mb-4">@TempData["Success"]</div>
    }

    <!-- Submit form -->
    <form method="post" asp-controller="Review" asp-action="Submit" class="mb-8 grid grid-cols-1 md:grid-cols-2 gap-4">
        <input name="ReviewerName" placeholder="Your name" class="p-3 border rounded" />
        <select name="Rating" class="p-3 border rounded">
            <option value="5">5 - Excellent</option>
            <option value="4">4 - Very good</option>
            <option value="3">3 - Good</option>
            <option value="2">2 - Okay</option>
            <option value="1">1 - Poor</option>
        </select>
        <textarea name="ReviewText" placeholder="Write your review" class="p-3 border rounded md:col-span-2"></textarea>
        <button class="px-4 py-2 bg-blue-600 text-white rounded md:col-span-2">Submit review</button>
    </form>

    <!-- Reviews list -->
    <div class="space-y-4">
        @foreach (var r in Model)
        {
            <div class="bg-white dark:bg-gray-800 p-4 rounded shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <div class="font-semibold">@r.ReviewerName</div>
                        <div class="text-sm text-gray-500">@r.ReviewDate.ToLocalTime().ToString("yyyy-MM-dd")</div>
                    </div>
                    <div class="text-yellow-400">⭐ @r.Rating</div>
                </div>
                <p class="mt-3 text-gray-700 dark:text-gray-300">@r.ReviewText</p>
            </div>
        }
    </div>
</section>
